<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:cardCornerRadius="8dp">

    <!--Single Row for contact-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="src_over"
        >

        <!--User's Pic-->
        <ImageView
            android:id="@+id/contactPic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/contactpic" />

        <!--Contact's Name-->
        <TextView
            android:id="@+id/contactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/contactPic"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingTop="2dp"
            android:text="Abhishek Hingorani"
            android:textSize="18dp" />

        <!--Contact's Number-->
        <TextView
            android:id="@+id/contactNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactName"
            android:layout_toRightOf="@id/contactPic"
            android:paddingLeft="15dp"
            android:paddingTop="0dp"
            android:text="9409121655"
            android:textSize="12dp"
            android:textColor="#88888888"
            android:layout_alignParentBottom="true" />

        <!--Show more Btn-->
        <ImageView
            android:layout_width="12dp"
            android:layout_height="16dp"
            android:src="@drawable/showmorebutton"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>